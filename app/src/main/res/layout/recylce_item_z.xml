<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="note"
            type="leon.longnote.model.NoteItem" />

        <variable
            name="presenter"
            type="leon.longnote.presenter.NoteListItemPresenter" />

        <variable
            name="callback"
            type="leon.longnote.ui.NoteItemClickInterface" />

        <variable
            name="sdf"
            type="java.text.SimpleDateFormat" />

    </data>

    <LinearLayout
        android:id="@+id/frame1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/frame2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() ->  callback.onClick(note)}"
            android:onLongClick="@{()-> callback.onItemLongClick(note)}"
            android:orientation="vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:minWidth="500dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iamge_list"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="3dp"
                    android:scaleType="matrix"
                    app:imageUrl="@{presenter.getContentImageUrl(note)}"
                    app:visibleOrGone="@{presenter.showOrHideImageLayout}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/contentnote_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="@{note.textx}"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/note_list_card_create_time_icon"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/titlenote_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@{sdf.format(note.date)}"
                            android:textColor="#cecece"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/voicelayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:onClick="@{()-> presenter.onAudioClicked(note)}"
                android:orientation="horizontal"
                app:visibleOrGone="@{!(note.voicepath.isEmpty())}">

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/voice_button_bg"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/listmediaimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:background="@{presenter.voiceStatusIcon}" />

                    <TextView
                        android:id="@+id/voicesecond1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:text="@{presenter.getAudioDuration(note)}"
                        android:textColor="#eabb00" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/multilayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/title_tab2_background"
                android:minWidth="500dp"
                android:orientation="horizontal"
                app:visibleOrGone="@{note.isChecked}" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:onClick="@{()->presenter.onDeleteClicked(note)}"
                android:text="删除"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:text="分享"
                android:textColor="@android:color/white"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>
</layout>
